<!DOCTYPE html>
<html>
    <head>
        <%- include ('../views/partials/header.ejs') %>
         <!-- The momentjs library -->
        <script src="js/moment-with-locales.js"></script>
        <!-- Your javascript -->
        <script src="js/my-custom-script.js"></script>
        <link rel="stylesheet" href="/CSS/style.css">
        <title>Gestion Transaction</title>
    </head>
    <body>
        <div class="box">
            <div class="section">
                <section class="p-5">
                    <div class="container">
                        <h1>Gestion Transaction</h1>
                    </div>
                </section>
                <section class="p-1">
                    <div class="container">
                        <form action="/gestion/transaction" method="post" id="form">
                            <div class="mb-3">
                                <label class="form-label">Debut du recherche</label>
                                <input type="date" id="start" name="start" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Fin du recherche</label>
                                <input type="date" id="end" name="end" class="form-control">
                            </div>
                            <div class="mb-3">
                                <button class="btn btn-primary" onclick="recherche()">Rechercher</button>
                            </div>
                        </form>
                        
                    </div> 
                </section>
                <section class="p-1">
                    <div class="container">
                        <table class="table table-striped table-hover table-sm">
                            <thead>
                              <tr>
                                <th scope="col">Date</th>
                                <th scope="col">Client</th>
                                <th scope="col">Sujet</th>
                                <th scope="col">Description</th>
                                <th scope="col">Methode de paiement</th>
                                <th scope="col">Montant</th>
                                <th scope="col">Employee</th>
                              </tr>
                            </thead>
                            <tbody>
                                <% transactions.forEach(transaction =>  { %>
                                    <% console.log(transaction._id) %>
                                    <% console.log(typeof transaction.DateTransaction) %>
                                    <% if (transaction.DateTransaction >= start ){ %>

                                        <tr>
                                            <td><%=transaction.DateTransaction%></td>
                                            <%var compteur =  0 %>  
                                            <% utilisateurs.forEach(utilisateur =>  { %>                              
                                                <% if(transaction.Utilisateur_id.toString() == utilisateur._id.toString() ){ %>
                                                    <% compteur++ %>
                                                    <td>
                                                        <span style="font-weight:bold;"><%=utilisateur.Nom%>, <%=utilisateur.Prenom%></span><br/>
                                                        <span style="font-size:15px;"><%=utilisateur.Telephone%></span>
                                                    </td>
                                                <% } %>
                                                                             
                                            <% }) %>
                                            <% if (compteur == 0){ %>
                                                <td>utilisateur supprimé</td>
                                            <% } %>  
                                            <td><%=transaction.Titre%></td>
                                            <td><%=transaction.Commentaire%></td>
                                            <td><%=transaction.MethodePaiement%></td>
                                            <td><%=transaction.Cout%></td>
                                            <%var compteur =  0 %>
                                            <% utilisateurs.forEach(utilisateur =>  { %>
                                                <% if(transaction.EmployeeId.toString() == utilisateur._id.toString() ){ %>
                                                    <% compteur++ %>
                                                    <td><%=utilisateur.Nom%>, <%=utilisateur.Prenom%></td>
                                                <% } %>                                   
                                            <% }) %>
                                            <% if (compteur == 0){ %>
                                                <td>Employee supprimé</td>
                                            <% } %> 
                                        </tr>
                                    <% } %>
                                <% }) %>
                            </tbody>
                          </table>
                    </div>
                </section>
            </div>
            <%- include ('../views/partials/footer.ejs') %>
        </div>

    </body>
    <script>
        function recherche(){
            if (!document.getElementById('end').value) {
                console.log('here')
                document.getElementById('end').value = Date.now()
            }
            console.log(Date.parse(document.getElementById('start').value))
            console.log(Date.parse(document.getElementById('end').value))
            if (document.getElementById('start').value > document.getElementById('end').value){
                alert("erreur")
            } else{
                document.getElementById('form').submit();
            }
        }
    </script>

</html>
